<!doctype html>
<html>
<head>
	<% include head_dash %>
    <link rel="stylesheet" type="text/css" href="/css/AddCourse.css">
</head>
<header>
	<% include header_add %>
</header>
<body>
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
        <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
        <% } %>
        </div>
    </div>

    <div class="page-header text-center">
        <h1><span class="fa fa-plus"></span> Add a Course<span class="badge"></span></h1>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3" style="height: 750px;">
            <form action="/AddCourse" method="post">
                <div class="form-group hidden">
                    <input type="text" class="form-control" id="professor" readonly="true" name="professor" value= <%= user.id %> />
                </div>
                <div class="form-group">
                    <label for="section">Subject:</label>
                    <input type="text" class="form-control" id="section" name="section" />
                </div>
                <div class="form-group">
                    <label for="num">Course:</label>
                    <input type="text" class="form-control" id="num" name="num" />
                </div>
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>
                <div class="form-group">
                    <label for="start">Start Time:</label>
                    <input type="text" class="form-control" id="startTime" name="startTime"> 
                </div>
                <div class="form-group">
                    <label for="duration">Duration:</label>
                    <input type="text" class="form-control" id="duration" name="duration">
                </div>
                <div class="form-group">
                    <label class="checkbox-inline"><input type="checkbox" id="day1" name="day1" value="Monday">Monday</label>
                    <label class="checkbox-inline"><input type="checkbox" id="day2" name="day2" value="Tuesday">Tuesday</label>
                    <label class="checkbox-inline"><input type="checkbox" id="day3" name="day3" value="Wednesday">Wednesday</label>
                    <label class="checkbox-inline"><input type="checkbox" id="day4" name="day4" value="Thursday">Thursday</label>
                    <label class="checkbox-inline"><input type="checkbox" id="day5" name="day5" value="Friday">Friday</label>
                </div>
                <button type="submit" class="btn btn-warning btn-lg">Submit</button>
            </form>
        </div>
    </div>
    <div class="clearfix"></div>
</div>
</body>
<footer style="position: relative"> 
    <% include footer_dash %>
</footer>
</html>