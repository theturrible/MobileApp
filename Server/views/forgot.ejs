<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
    <% include head.ejs %>
    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1>Whiteboard @ <img class="fa" src="http://s7d2.scene7.com/is/image/Fathead/lgo_ncaa_vcu_rams?layer=comp&fit=constrain&hei=50&wid=200&fmt=png-alpha&qlt=95,0&op_sharpen=0&resMode=bicub&op_usm=0.0,0.0,0,0&iccEmbed=0" alt=""/></h1>

    <h1><span class="glyphicon glyphicon-repeat"></span> Password Reset</h1>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/forgot" method="post">
        <div class="form-group">
            <label>New Password</label>
            <input type="password" class="form-control" name="compare">
        </div>
        <div class="form-group">
            <label>Confirm Password</label>
            <input type="password" class="form-control" name="password">
        </div>
        <input type="password" class="form-control hidden" name="token" readonly value="<%= token %>">
        <button type="submit" class="btn btn-warning btn-lg">Submit</button>
    </form>

    <hr>

    <p>Need an account? <a href="/signup">Signup</a></p>
    <p>Or go <a href="/">home</a>.</p>

</div>

</div>
</body>
<footer>
    <% include footer.ejs %>
</footer>
</html>

