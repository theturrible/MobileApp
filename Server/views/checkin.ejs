<!doctype html>
<html>
<head>
	<% include head_dash %>
  <script type="text/javascript" src="/qrcode/qrcode.js"></script>
  <script type="text/javascript" src="/js/course.js"></script>
  <script type="text/javascript">
  $(document).ready(function(){
      <% if(checkin.length > 0){ %>
          new QRCode(document.getElementById("qrcode"), '<%= checkin[checkin.length-1].token %>');
      <% } %>
  });
  </script>
</head>
<header>
	<% include header_add %>
</header>
<body>
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
        <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
        <% } %>
        </div>
    </div>

    <div class="page-header text-center">
        <div style="display: inline-block;">
            <h1><span class="fa fa-check-square-o"></span> Check-In's<span class="badge"></span></h1>
        </div>
        <div style="display: inline-block; float: left;">
            <a href='/course/<%= req.params.id %>'class="btn btn-warning"><span class="fa fa-chevron-left"></span> back to course</a>
        </div>
    </div>

    <!-- show any messages that come back with authentication -->
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-5">
            <div class="page-header">
                <h3><span class="fa fa-plus" style="margin-right: 20%;"></span>New Check-In</h3>
            </div>
            <div class="well">
                <form action='/course/checkin/<%= req.params.id %>' method="post">
                  <div class="form-group">
                    <label for="expire">Time until expiration?</label>
                    <input type="number" class="form-control" id="expire" name="expire" /> in minutes
                  </div>
                  <br>
                  <button type="submit" class="btn btn-block btn-success" style="  font-size: 200%;">Generate <span class="fa fa-qrcode" style="margin-left: 10%;"></span></button>
                </form>
                <div id="qrcode" style="margin: 20%;"></div>
            </div>
        </div>
        <div class="col-sm-1"></div>
        <div class="col-sm-5">
            <div class="page-header">
                <h3><span class="fa fa-history" style="margin-right: 20%;"></span> Check-In History</h3>
            </div>
            <div class="text-left">
                <% if(checkin.length < 1) { %>
                        <p class="text-muted">No Check-In's</p>
                <% } %>
                <% for(var i = checkin.length; i --> 0; ) { %>
                    <div class="list-group">
                        <h3 class="list-group-item-heading"><%= checkin[i].create %></h3>
                        <h4 class="list-group-item-heading">Expires: <%= checkin[i].expire %></h4>
                        <h4 class="list-group-item-text text-center" style="display: inline-block; margin-bottom: 5%;"><span class="label label-success" stlye="margin-right: 5%;"><%= checkin[i].students.length %> </span> Checked In</h4>
                        <br>
                    </div>
                 <% } %>
            </div>
        </div>
    </div>

</div>
</body>
<footer>
    <% include footer_dash %>
</footer>
</html>