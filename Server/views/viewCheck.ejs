<!doctype html>
<html>
<head>
	<% include head_dash %>
  <script src="https://cdn.socket.io/socket.io-1.3.5.js"></script>
  <script type="text/javascript">
      $(document).ready(function(){
          var socket = io('http://localhost:8080').connect();
          var item = $("<h3></h3>").addClass('list-group-item-heading');

          socket.on('newCheck', function(data){
            console.log(data);
            $('#none').addClass('hidden');
            item.text(data);
            $('#students').append(item);
          });
          console.log('think we are good');
      });
  </script>
</head>
<header>
	<% include header_add %>
</header>
<body>
<div class="container">
    <div class="row">
        <div class="col-sm-10 col-sm-offset-3">
        <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
        <% } %>
        </div>

        <div class="page-header text-center">
          <div style="display: inline-block; float: left;">
              <a href='/course/checkin/<%= req.query.course %>'class="btn btn-warning"><span class="fa fa-chevron-left"></span> back to check-In</a>
          </div>
          <br>
          <br>
          <div style="display: inline-block;">
              <h1 style="width: 110%"><span class="fa fa-users" style="margin-right: 5%; "></span>Checked-In<span class="badge"></span></h1>
          </div>
        </div>
    </div>

    <div class="row">
      <br>
      <br>
        <div class="col-sm-12 col-offset-3">
            <div class="text-center">
               <div id="students">
                  <% for(var k = students.length; k --> 0; ) { %>
                          <h3><%= students[k].email %></h3>
                          <br>
                 <% } %>
                </div> 
            </div>
        </div>
    </div>

</div>
</body>
<footer>
    <% include footer_dash %>
</footer>
</html>